<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
       
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
        @Scripts.Render("~/bundles/modernizr")
    </head>
    <body>
        <div id="mainwrapper"> 
           <div id="header">
                <center><h3>Developer Challenger Code</h3> </center>
               <center><h4>( Murthy Ramabhotla )</h4> </center>
                <div id="header-bottom">
                    <div id="header-left">
                       @Html.ActionLink("Home", "Index", "Titles")
                       @Html.ActionLink("Search", "SearchIndex", "Titles")
                    </div>
                   <br />
                </div>
            </div>

        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Developer Challenger Code Assessement</p>
                </div>
            </div>
        </footer>
</div>
        @Scripts.Render("~/bundles/jquery")
        @RenderSection("scripts", required: false)
    </body>
</html>
